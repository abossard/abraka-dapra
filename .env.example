# Core Dapr ports
DAPR_HTTP_PORT=3500
DAPR_GRPC_PORT=50001

# Service ports
AGENT_SHELL_APP_PORT=8000
WORKFLOW_HOST_APP_PORT=7000

# Ollama configuration
# For local development: http://localhost:11434
# For Docker: http://ollama:11434
OLLAMA_ENDPOINT=http://localhost:11434
OLLAMA_MODEL=deepseek-r1:8b

# Redis configuration
# For local development: localhost:6379
# For Docker: redis:6379
REDIS_HOST=localhost:6379

# Workflow saga knobs
SNACKTOPUS_HUMAN_TIMEOUT_SECONDS=900
SNACKTOPUS_SUPPLY_TIMEOUT_SECONDS=600
SNACKTOPUS_COMPENSATION_ENABLED=true

# Telemetry
# For local development: http://localhost:9411/api/v2/spans
# For Docker: http://zipkin:9411/api/v2/spans
ZIPKIN_ENDPOINT=http://localhost:9411/api/v2/spans
WORKFLOW_METRICS_TOPIC=workflow-metrics
